page{
  background: #fff;
}
.yxz-cel .tr .th , .yxz-cel .tr .td{
  width: 25%
}
/** 表格 */
.yxz-cel{
  padding: 0 20rpx
}
.yxz-cel .title{
  display: flex;
  text-align: center;
  font-size: 32rpx;
  color: #848b91;
  padding: 30rpx 0;
}
.yxz-cel .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
  border-bottom: 1px solid #f2f4f7;
}
.yxz-cel .tr:last-child{
  border-color: transparent;
}
.yxz-cel .bg-w{
  background: #f5f5f5;
  border-radius: 8rpx;
  border-color: transparent;
}
.yxz-cel .bg-g{
  background: #f6f6f6;
}
.yxz-cel .tr .th {
  width: 25%;
  justify-content: center;
  background: f9f9f9;
  color: #999;
  display: flex;
  height: 3rem;
  font-size: 28rpx;
  align-items: center;
}
.yxz-cel .tr .td {
  display: block;
  width: 25%;
  color: #333;
  justify-content: center;
  text-align: center;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.yxz-cel .tr .th.b,
.yxz-cel .tr .td.b{
  width: 30%;
}
.yxz-cel .tr .th.s,
.yxz-cel .tr .td.s{
  width: 10%;
}